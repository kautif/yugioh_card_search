@using static yugioh_card_search.Models.CardModel;
@model Rootobject
<link href="~/css/card.css" rel="stylesheet" type="text/css" />
<div class="card-flex" style="padding-top: 10%;"> 
    @if (Model == null)
    {
        <h1>No results found. Sorry about that. Perhaps try less search terms or different ones.</h1>
        <a href="/"><h2>Search Again</h2></a>
    } else
    {
        @foreach (var item in Model.data)
        {
            <div class="card-flex-item">
                <h1 class="card-title truncate">@item.name</h1>
                <img class="card-image" src="@item.card_images[0].image_url" />
                <h4 class="card-rarity truncate">Selling For: $@item.card_prices[0].ebay_price</h4>
                <p class="card-desc">@item.desc</p>
            </div>
        }
    }

</div>